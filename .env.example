# FitChallenge 环境配置示例
# 复制此文件为 .env 并填入实际值

# 应用配置
NODE_ENV=development
PORT=3002
FRONTEND_PORT=8080
ADMIN_PORT=8081

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=fitchallenge
DB_USER=root
DB_PASSWORD=fitchallenge123

# JWT 安全配置
JWT_SECRET=your_jwt_secret_key_here_should_be_very_long_and_random
JWT_EXPIRES_IN=24h

# CORS 配置
CORS_ORIGIN=http://localhost:8080,http://localhost:8081

# 速率限制配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=app.log

# Telegram Bot 配置（可选）
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# 支付网关配置（可选）
PAYMENT_GATEWAY=test
PAYMENT_API_KEY=
PAYMENT_SECRET=

# 文件上传配置
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif

# 缓存配置
CACHE_TTL=3600